# Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=test

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=your-secure-session-secret-change-this-in-production

# Database Configuration
# For local PostgreSQL:
DATABASE_URL=postgresql://testuser:tests@localhost:5433/tests
# For Neon Database:
# DATABASE_URL=your_neon_database_url_here

# VAPID Keys for Push Notifications
# Generate these using: npx web-push generate-vapid-keys

# DATABASE_URL=postgresql://postgres:example@localhost:5432/postgres
VAPID_PUBLIC_KEY=changeme
VAPID_PRIVATE_KEY=changeme
VAPID_EMAIL=mailto:emergency@example.com
